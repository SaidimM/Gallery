<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:longClickable="true"
            android:focusable="true"
            android:id="@+id/surface"/>
    <com.example.gallery.main.views.player.view.VideoSystemOverlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/system_overlay"/>
    <com.example.gallery.main.views.player.view.VideoProgressOverlay
            android:id="@+id/progress_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <com.example.gallery.main.views.player.view.VideoControllerOverlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/controller_overlay"/>
</FrameLayout>