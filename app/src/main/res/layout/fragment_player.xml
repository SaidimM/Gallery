<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.google.android.material.bottomsheet.BottomSheetBehavior.State"/>

        <variable
                name="viewModel"
                type="com.example.gallery.main.music.viewModels.MusicPlayerViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_top_corner_16"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.example.gallery.main.music.views.FluidView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fluid_view"/>

        <com.example.gallery.main.music.lyric.LyricsView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:id="@+id/lyrics_view"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:id="@+id/player_layout"
                android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/album">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/album_cover"
                        android:contentDescription="@string/album_cover"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:lines="1"
                    tools:text="Lights on"
                    android:textColor="@color/white"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/album"
                    app:layout_constraintEnd_toStartOf="@id/play"
                    android:layout_marginStart="16dp"
                    android:id="@+id/music_name"/>

            <ImageButton
                    android:contentDescription="@string/play"
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingHorizontal="8dp"
                    android:background="@color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/next"
                    android:src="@drawable/ic_play"/>

            <ImageButton
                    android:contentDescription="@string/next"
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_next"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="96dp"
                android:id="@+id/large_cover"
                android:visibility="gone"
                tools:background="@mipmap/ic_launcher"
                android:contentDescription="@string/album_cover"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="32dp"
                android:id="@+id/controller">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Fallin' All In You - The shawn Mendes foundation"
                    android:textColor="@color/white"
                    android:id="@+id/song_name"
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:lines="1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/singer_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/song_name"
                    tools:text="Shawn mendes"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/singer_name"
                    android:background="@drawable/bg_corner_white_3dp"/>

            <View
                    app:layout_constraintTop_toBottomOf="@id/singer_name"
                    android:id="@+id/seekbar"
                    android:layout_height="6dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"/>

            <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toBottomOf="@id/seekbar"
                    android:background="@drawable/ic_play"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/play"/>

            <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toBottomOf="@id/seekbar"
                    android:background="@drawable/ic_pre"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:contentDescription="@string/play"/>

            <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toBottomOf="@id/seekbar"
                    android:background="@drawable/ic_next"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/play"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>